[weather]
command=curl -m1 wttr.in?format=2 2>/dev/null
interval=1800
label=

[publicip]
command=curl ifconfig.me | xargs
interval=600
label=󰖈 

[privateip]
command=hostname -i
interval=600
label=󰌘 

[cpu]
command=$HOME/.config/i3blocks/cpu
min_width=130
max_width=130
align=left
interval=1
label= 

[memory]
command=free -h | awk '/^Mem/ {print $3"/"$2}' | sed 's/i//g'
min_width=120
max_width=120
align=center
interval=1
label= 

[time]
command=date +%H:%M
interval=1
